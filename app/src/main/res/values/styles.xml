<!-- res/values/styles.xml -->
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom style for AlertDialog -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize your AlertDialog appearance here -->
        <item name="android:windowBackground">@drawable/search_box_background</item>
        <item name="android:windowTitleStyle">@style/DialogTitle</item>
    </style>

    <!-- Style for AlertDialog title -->
    <style name="DialogTitle">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
