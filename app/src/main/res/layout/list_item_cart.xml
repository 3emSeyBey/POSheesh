<!-- list_item_cart.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Left Section: Image and Name -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Image View -->
        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/hot_choco_1"
            android:scaleType="centerCrop"
            android:contentDescription="Item Image"/>

        <!-- Item Name and Price x Quantity -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Item Name -->
            <TextView
                android:id="@+id/itemIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Price x Quantity -->
            <TextView
                android:id="@+id/priceQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price x Quantity"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Right Section: Plus and Minus Buttons, Quantity Text, Delete Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Plus and Minus Buttons with Quantity -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Minus Button -->
            <ImageView
                android:id="@+id/minusButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_minus"
                android:contentDescription="Minus"/>

            <!-- Quantity TextView -->
            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <!-- Plus Button -->
            <ImageView
                android:id="@+id/plusButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_plus"
                android:contentDescription="Plus"/>
        </LinearLayout>

        <!-- Delete Button -->
        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_img_error"
            android:contentDescription="Delete"/>
    </LinearLayout>


</LinearLayout>
