<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/default_background"/> <!-- Background color of the cylinder -->
    <corners android:radius="20dp"/> <!-- Adjust the radius to change the curvature -->
